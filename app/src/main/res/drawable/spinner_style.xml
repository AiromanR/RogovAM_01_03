<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Нажатое состояние -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#F5F5F5" /> <!-- Светло-серый при нажатии -->
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="#E0E0E0" />
        </shape>
    </item>

    <!-- Обычное состояние -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/lightblue" /> <!-- Белый фон -->
            <corners android:radius="8dp" />
            <stroke
                android:width="1dp"
                android:color="#E0E0E0" /> <!-- Серая обводка -->
        </shape>
    </item>
</selector>